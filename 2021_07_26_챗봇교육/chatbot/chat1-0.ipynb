   "source": [
    "# config.DatabaseConfig.py\n",
    "\n",
    "DB_HOST = \"127.0.0.1\"\n",
    "DB_USER = \"user1\"\n",
    "DB_PASSWORD = \"pass1\"\n",
    "DB_NAME = \"test\"\n",
    "\n",
    "def DatabaseConfig():\n",
    "    global DB_HOST, DB_USER, DB_PASSWORD, DB_NAME"
   ]
  },
