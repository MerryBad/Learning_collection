   "source": [
    "# HeidiSQL 로 접속해서 사용자 추가\n",
    "create user 'user1'@'localhost' identified by 'pass1';\n",
    "\n",
    "create user 'user1'@'%' identified by 'pass1';\n",
    "\n",
    "grant all privileges on test.* to 'user1'@'localhost';\n",
    "\n",
    "grant all privileges on test.* to 'user1'@'%';\n",
    "\n",
    "flush privileges;"
   ]
